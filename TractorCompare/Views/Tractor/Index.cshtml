<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TractorCompare.styles.css" asp-append-version="true" />
</head>


@using TractorCompare.Models;
@model IEnumerable<Tractors>

<div class="container-fluid">
    <div class="row">

        <div class="dropdown col-2" >
            <button type="button" class="btn btn-outline-dark dropdown-toggle" data-bs-toggle="dropdown">
                Brands
            </button>
            <ul class="dropdown-menu">
                <li><a class="dropdown-item" asp-area="" asp-controller="Tractor" asp-action="JohnDeere">John Deere</a></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="Tractor" asp-action="JohnDeere">Kubota</a></li>
                <li><a class="dropdown-item" asp-area="" asp-controller="Tractor" asp-action="JohnDeere">Kioti</a></li>
            </ul>
        </div>

        <div class="col-10">
            <h2>Tractors</h2>
            <table class="table table-hover" id="TractorTable" >
                <thead>
                    <tr>
                        <th>Image</th>
                        <th>Brand</th>
                        <th>Model</th>
                        <th>Engine HP</th>
                    </tr>
                </thead>

                @foreach (var Tractor in Model)
                {
                    <tbody>
                        <tr>
                            <td>
                                <a href=/Tractor/viewTractor/@Tractor.tractorID>
                                    <img src="@Url.Content(@Tractor.image)" alt="tractor" width="150" />
                                </a>
                            </td>
                            <td>@Tractor.Brand</td>
                            <td>@Tractor.Model</td>
                            <td>@Tractor.HP HP</td>
                        </tr>
                    </tbody>
                }
            </table>
        </div>
    </div>
</div>