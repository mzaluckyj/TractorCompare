<head>
    <meta charset="utf-8" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TractorCompare.styles.css" asp-append-version="true" />
</head>

@using TractorCompare.Models;
@model Tractors

<h3>@Model.Model Information</h3>

<div class="container-fluid">
    <div class="row">
        <div class="col-6">
            <img src="@Url.Content(@Model.image)" alt="Tractor image not found" width="500" />
        </div>
        <div class="col-6">
            <h3>@Model.brandID @Model.Model</h3>
            <br />
            <p>Series/Size: @Model.Class</p>
            <p>Engine Horsepower: @Model.HP</p>
            <p>PTO Horsepower: @Model.PTO</p>
            <p>Fuel tank capacity: @Model.fuel gallons</p>
            <p>Hydraulic steering pump: @Model.hydroSteer gpm</p>
            <p>Hydraulic implement pump: @Model.hydroImp gpm</p>
            <p>Three piont hitch lift capacity: @Model.threePT Lbs</p>

        </div>
    </div>
</div>


<br />
<br />
<br />
<br />
<br />
<div class="container-fluid">
    <div class="row">
        <div class="col-2">
            <a type="button" class="btn btn-outline-info" href="/Tractor/UpdateTractor/@Model.tractorID" >Update Tractor</a>
        </div>
        <div class="col-2">
            @using (Html.BeginForm("DeleteTractor", "Tractor", "Post"))
            {
                <button class="btn btn-outline-danger" type="submit" onclick="return confirm('Are you sure?')">Delete tractor</button>
                <input type="hidden" asp-for="tractorID" value="@Model.tractorID" />

            }
        </div>
    </div>
</div>
